{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "FileStorageSettings": {
    "BasePath":"./bin/files"
  },
  "SizeSettings": {
    "Settings": [
      {
        "Size": 10,
        "MaxWidth": 500,
        "MaxHeight": 500,
        "KeepAspectRatio": true,
        "Quality": 90
      },
      {
        "Size": 20,
        "MaxWidth": 1000,
        "MaxHeight": 1000,
        "KeepAspectRatio": true,
        "Quality": 80
      },
      {
        "Size": 30,
        "MaxWidth": 2000,
        "MaxHeight": 2000,
        "KeepAspectRatio": true,
        "Quality": 75
      }
    ]
  }
}
